upstream <%= @application %> {
  server unix:<%= @deploy_data[:deploy_to]%>/gunicorn.sock fail_timeout=0;
}

log_format timed_combined '$remote_addr - $remote_user [$time_local]  '
    '"$request" $status $body_bytes_sent '
    '"$http_referer" "$http_user_agent" "$http_x_forwarded_for" '
    '$request_time $upstream_response_time $pipe';

server {
  listen   80 default_server;
  location /static/www/README.txt {
    alias /srv/www/bluecowweb/current/www/static/www/README.txt;
    access_log off;
  }
  location / {
    return 444;
  }
}


server {
  listen   80;
  server_name  <%= @deploy_data[:domains].join(" ") %> <%= node[:hostname] %>;
  access_log  <%= node[:nginx][:log_dir] %>/<%= @deploy_data[:domains].first %>.access.log;

  location /static/ {
    alias   <%= @deploy_data[:deploy_to] %>/current/www/static/;
  }
  
  location /static/www/README.txt {
    alias /srv/www/bluecowweb/current/www/static/www/README.txt;
    access_log off;
  }

  location /uploads/ {
    alias <%= @deploy_to[:deploy_to] %>/media_root/uploads/;
  }

  location / {
    proxy_pass http://<%= @application %>;
    proxy_set_header Host $http_host;
  }
  
  # Block all svn access
  if ($request_uri ~* ^.*\.svn.*$) {
     return 404;
  }
  
  # Block all git access
  if ($request_uri ~* ^.*\.git.*$) {
     return 404;
  }
  
  location /nginx_status {
    stub_status on;
    access_log off;
    allow 127.0.0.1;
    deny all;
  }
  
}
